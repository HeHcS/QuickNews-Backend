# Server Configuration
PORT=5000
NODE_ENV=development
TEST_MODE=false

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/video-platform

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
MAX_FILE_SIZE=50000000 # 50MB
MAX_FILES_COUNT=5

# OAuth (uncomment and configure when implementing)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# API Keys (uncomment and configure when implementing)
# OpenAI API key for automatic article generation from videos
OPENAI_API_KEY=your_openai_api_key

# Additional services (uncomment and configure when implementing)
# REDIS_URL=redis://localhost:6379

# Add other configuration as needed when implementing features
# Examples:
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL=3600 # Default cache TTL in seconds (1 hour)

# Video Upload Settings
ALLOWED_VIDEO_FORMATS=mp4,webm,mov
MAX_VIDEO_DURATION=600 # Max video duration in seconds (10 minutes)
VIDEO_STORAGE_PATH=uploads/videos # Relative path for storing videos